<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/choose_category_list_vertical_padding"
        android:paddingBottom="@dimen/choose_category_list_vertical_padding"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/choose_category_iv_art"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arts"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="@dimen/choose_category_list_vertical_padding"
            android:paddingBottom="@dimen/choose_category_list_vertical_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/choose_category_iv_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/video"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="@dimen/choose_category_list_vertical_padding"
            android:paddingBottom="@dimen/choose_category_list_vertical_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/choose_category_iv_wellness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/wellness"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="@dimen/choose_category_list_vertical_padding"
            android:paddingBottom="@dimen/choose_category_list_vertical_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/choose_category_iv_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/food"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="@dimen/choose_category_list_vertical_padding"
            android:paddingBottom="@dimen/choose_category_list_vertical_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/choose_category_iv_children"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/children"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="@dimen/choose_category_list_vertical_padding"
            android:paddingBottom="@dimen/choose_category_list_vertical_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/choose_category_iv_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/music"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="@dimen/choose_category_list_vertical_padding"
            android:paddingBottom="@dimen/choose_category_list_vertical_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/choose_category_iv_season"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/season"
            android:background="?attr/selectableItemBackground"
            android:paddingTop="@dimen/choose_category_list_vertical_padding"
            android:paddingBottom="@dimen/choose_category_list_vertical_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"/>

    </LinearLayout>

</ScrollView>
