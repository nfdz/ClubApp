<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/list_item_vertical_margin"
    android:layout_marginBottom="@dimen/list_item_vertical_margin"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/item_user_attendance_tv_fullname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/user_title_text_size"
        android:textStyle="bold"
        tools:text="Lorem ipsum"
        android:maxLines="1"
        android:ellipsize="end"
        android:textIsSelectable="true"
        android:includeFontPadding="false"
        android:layout_marginEnd="@dimen/user_horizontal_margin"
        android:layout_marginRight="@dimen/user_horizontal_margin"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/item_user_attendance_tv_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_user_attendance_iv_confirmation"/>

    <TextView
        android:id="@+id/item_user_attendance_tv_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/user_subtitle_text_size"
        android:includeFontPadding="false"
        tools:text="741258963"
        android:textIsSelectable="true"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="@+id/item_user_attendance_tv_fullname"
        app:layout_constraintRight_toRightOf="@+id/item_user_attendance_tv_fullname"
        app:layout_constraintTop_toBottomOf="@+id/item_user_attendance_tv_fullname"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/item_user_attendance_iv_confirmation"
        android:layout_width="@dimen/user_actions_size"
        android:layout_height="@dimen/user_actions_size"
        app:srcCompat="@drawable/ic_check_accent"
        android:layout_marginEnd="@dimen/user_horizontal_margin"
        android:layout_marginRight="@dimen/user_horizontal_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>